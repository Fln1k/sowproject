<!-- -------------------------------------SCRIPTS------------------------------------- -->
<!-- --------------------------------------------------------------------------------- -->
<script>
function checkAll(source) {
    document.getElementsByName('titlecheckbox').forEach(checkbox => checkbox.checked = source.checked)
}

function search_feature_in_Task_by_title(Key) {
    for (var question_counter = 0; question_counter < variables.length; ++question_counter) {
        if (variables[question_counter].options) {
            for (var option_counter = 0; option_counter < variables[question_counter].options.length; ++option_counter) {
                if (variables[question_counter].options[option_counter].feature && variables[question_counter].options[option_counter].feature.title === Key) {
                    return variables[question_counter].options[option_counter].feature;
                }
            }
        }
    }
}

$('#priceTable').on("DOMSubtreeModified", function() {
    var total = 0.0
    results.forEach(price => total += (parseFloat(price.budget) * parseFloat(price.hours)))
    document.getElementById("totalPrice").innerHTML = "$ " + total.toFixed(1)
});

document.getElementById("tb").innerHTML = budget_add_td
</script>